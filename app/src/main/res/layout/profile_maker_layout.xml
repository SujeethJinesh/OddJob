<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Create A Profile:"
            android:textColor="#757575"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:hint="Enter your name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Tags:"
            android:layout_marginLeft="16dp"
            android:textColor="#757575"
            android:textSize="24sp" />


        <CheckBox
            android:id="@+id/tutoringCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="24dp"
            android:text="tutoring"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cookingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="24dp"
            android:text="cooking"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/babysittingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="24dp"
            android:text="babysitting"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/drivingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="24dp"
            android:text="heavy lifting"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/liftingCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="24dp"
            android:text="driving"
            android:textAllCaps="true"
            android:textSize="20sp" />



    </LinearLayout>
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:text="Next"  />
</RelativeLayout>
